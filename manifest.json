{
  "manifest_version": 3,
  "name": "Freelancer Auto Bid Assistant",
  "version": "2.0",
  "description": "Alerts you about new Freelancer projects, shows client country, and auto-fills smart bids using AI.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.freelancer.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.freelancer.com/projects/*"],
      "js": ["content.js"]
    }
  ]
}
